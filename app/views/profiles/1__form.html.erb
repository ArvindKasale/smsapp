<%= form_for(@profile) do |f| %>
<% if @profile.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
	<ul>
		<% @profile.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<fieldset>
	<legend>
		Basic Information
	</legend>
	<div class="field">
		<label>Employee Code</label>
		<%= f.text_field :employee_id, :class=>"string"%>
	</div>
	<div class="field">
		<label>First Name</label>
		<%= f.text_field :first_name, :class=>"string"%>
	</div>
	<div class="field">
		<label>Last Name</label>
		<%= f.text_field :last_name, :class=>"string"%>
	</div>
	<div class="field">
		<label>Birth Date</label>
		<%= f.date_select :birth_date,:start_year=> 1950, :class=>"date"%>
	</div>
	<div class="field">
		<label>Address Line 1</label>
		<%= f.text_field :address_1, :class=>"string"%>
	</div>
	<div class="field">
		<label>Address Line 2</label>
		<%= f.text_field :address_2, :class=>"string"%>
	</div>
	<div class="field">
		<label>Landmark</label>
		<%= f.text_field :landmark, :class=>"string"%>
	</div>
	<div class="field">
		<label>City</label>
		<%= f.text_field :city, :class=>"string"%>
	</div>
	<div class="field">
		<label>Pincode</label>
		<%= f.text_field :pincode, :class=>"string"%>
	</div>
	<div class="field">
		<label>State</label>
		<%= f.text_field :state, :class=>"string"%>
	</div>
	<div class="field">
		<label>Country</label>
		<%= f.text_field :country, :class=>"string"%>
	</div>
	<div class="field">
		<label>Phone Number</label>
		<%= f.text_field :phone_number_1, :class=>"string"%>
	</div>
	<div class="field">
		<label>Alternate Number</label>
		<%= f.text_field :phone_number_2, :class=>"string"%>
	</div>
	<%if @profile.new_record?%>
		<%= f.submit "Create Profile"%>
	<%else%>
		<%= f.submit "Edit Profile"%>
	<%end%>
</fieldset>
<% end %> 
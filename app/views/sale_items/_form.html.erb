<%= form_for(@sales_item) do |f| %><% if @sales_item.errors.any? %><div id="error_explanation">	<div class="flash">		<div class="message error">			<h2><%= pluralize(@sales_item.errors.count, "error") %> prohibited this profile from being saved:</h2>			<ul>						<% @sales_item.errors.full_messages.each do |msg| %>					<li>						<%= msg %>			</div>			</div>		</li>		<% end %>	</ul></div><% end %><fieldset>	<legend>		Daily Sales for <%= current_user.name%>	</legend>	<div class="field">		<label>Sales Date</label>		<%= f.date_select :sale_date,:default=>{:year=>Time.now.year, :month=>Time.now.month, :day=>Time.now.day},:end_year=> Time.now.year, :class=>"date"%>	</div>	<!--	<div class="field">	<label>Sales Date</label>	<%f.text_field :sale_date, :class=>"string", :id=>"salesDate"%>	</div>-->	<div class="field">		<label>Product</label>		<%= f.select :product_id, @product.collect{|p| [p.name,p.id]}, {:class=>"select"}%>	</div>	<div class="field">		<label>Quantity</label>		<%= f.text_field :quantity, :class=>"string"%>	</div>	<div class="group navform wat-cf">		<%= f.submit "Submit Sales"%>		<%= link_to "Cancel", sale_items_path%>	</div></fieldset><% end %> 